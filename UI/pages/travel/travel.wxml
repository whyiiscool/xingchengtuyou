<view class="body">

  <view class="list-wrap">
    <scroll-view scroll-y="true" class="list">
      <view class="list-scroll-view">
        <view wx:for="{{list}}" class="course-card" data-pageid='{{item.pageUrl}}' bindtap='jumpToInnerPage'>
          <view class="course-card image"><image src="{{item.coverPath}}"></image></view>
          <view class='name'>{{item.name}}</view>
          <view class="price">{{item.price}}</view>
        </view>


      </view>
    </scroll-view>
  </view>

 
</view>